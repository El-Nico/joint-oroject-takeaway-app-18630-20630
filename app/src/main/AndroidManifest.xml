<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app.project">

    <application
        android:allowBackup="true"
        android:icon="@drawable/mc_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/mc_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.app.project.Activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.app.project.Activity.ShopActivity"  android:screenOrientation="portrait"></activity>
        <activity android:name="com.example.app.project.Activity.CartActivity"  android:screenOrientation="portrait"></activity>
        <activity android:name="com.example.app.project.Activity.CheckoutActivity"  android:screenOrientation="portrait"></activity>
        <activity android:name="com.example.app.project.Activity.AboutUsActivity"  android:screenOrientation="portrait"></activity>

    </application>

</manifest>